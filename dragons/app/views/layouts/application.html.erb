<!DOCTYPE html>
<html>
<head>
  <title>Dragons</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless @errors.nil?%>
  <% @errors.each do |error| %>
    <h4 style="color: red;">
      <%= error %>
    </h4>
  <% end %>
<% end %>
<%= yield %>

</body>
</html>
